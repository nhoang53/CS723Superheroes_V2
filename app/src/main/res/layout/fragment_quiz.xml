<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/quizLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.nhoang53.cs723superheroes_v2.QuizActivityFragment"
    tools:showIn="@layout/activity_quiz"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="@string/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/questionNumberTextView"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/ic_superhero"
        android:id="@+id/heroImageView"
        android:layout_height="0dp"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:contentDescription="@string/quiz_type_description"/>

    <TextView
        android:text="@string/guess_superheroes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guessTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row1LinearLayout">

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1"
            style="@android:style/Widget.Material.Button.Colored"
            android:textColor="@color/button_text_color"
            android:lines="2"
            android:textAlignment="center" />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/button_text_color"
            android:lines="2"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/row2LinearLayout">

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/button_text_color"
            android:lines="2"
            android:textAlignment="center" />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Colored"
            android:textColor="@color/button_text_color"
            android:lines="2"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerTextView"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />


</LinearLayout>
